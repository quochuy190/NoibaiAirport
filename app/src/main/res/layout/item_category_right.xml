<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp350">
        <ImageView
            android:src="@drawable/img_plash"
            android:id="@+id/img_category_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp250" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/txt_name_category_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_below="@id/img_category_right"
            android:maxLines="2"
            android:textSize="@dimen/text_12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>