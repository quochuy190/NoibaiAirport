<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <include
       android:id="@+id/app_bar_shop"
       layout="@layout/app_bar_main">

   </include>
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/img_default"
        android:layout_margin="@dimen/dp5"
        app:layout_constraintTop_toBottomOf="@id/app_bar_shop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/img_shop_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200" />

    <TextView
        android:id="@+id/txt_shops_name"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/img_shop_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/text_16sp"
        android:gravity="center_vertical"
        android:text="Download Free Fonts and Free Dingbats "
        android:padding="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<View
    app:layout_constraintTop_toBottomOf="@id/txt_shops_name"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@color/view"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
    <ImageView
        android:padding="@dimen/dp5"
        app:layout_goneMarginTop="1dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/ic_like"
        android:id="@+id/img_like"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_shops_name"
        android:layout_width="@dimen/dp35"
        android:layout_height="@dimen/dp35" />
    <TextView
        app:layout_goneMarginTop="1dp"
        android:textSize="@dimen/text_14sp"
        android:text="Like"
       android:textColor="@color/text_flight"
        android:src="@drawable/ic_like"
        android:id="@+id/txt_like"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginLeft="10dp"
       app:layout_constraintLeft_toRightOf="@id/img_like"
        app:layout_constraintTop_toTopOf="@id/img_like"
        app:layout_constraintBottom_toBottomOf="@id/img_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        app:layout_constraintTop_toBottomOf="@id/img_like"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_shop"
        app:layout_constraintTop_toBottomOf="@id/img_like"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabTextColor="@color/text_flight"
        app:popupTheme="@style/PopupOverlay"
        android:layout_marginTop="@dimen/dp3"
        app:tabTextAppearance="@style/text_tab_thongke"
        app:tabSelectedTextColor="@color/color_lotus"
        app:tabIndicatorColor="@color/color_lotus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_shop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tablayout_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>