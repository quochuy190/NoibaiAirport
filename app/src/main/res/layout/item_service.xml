<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="@dimen/dp5"
    android:layout_margin="@dimen/dp5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_avata_service"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp120" />
        <TextView
            android:layout_marginLeft="@dimen/dp5"
            android:layout_below="@id/img_avata_service"
            android:id="@+id/txt_name_service"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp3"
            android:textColor="@color/text_flight"
            android:textSize="@dimen/text_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="@dimen/dp3"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_below="@id/txt_name_service"
            android:id="@+id/txt_price_service"
            android:layout_marginTop="@dimen/dp2"
            android:textColor="@color/text_flight"
            android:textSize="@dimen/text_14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.v7.widget.CardView>