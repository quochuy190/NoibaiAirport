<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <include
       android:id="@+id/app_bar_shop"
       layout="@layout/app_bar_main">

   </include>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/img_default"
                android:layout_margin="@dimen/dp1"
                               android:id="@+id/img_shop_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp200" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="@dimen/dp3"
                    android:id="@+id/ll_like_comment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:tint="@color/app_bar"
                        android:id="@+id/img_like"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="@dimen/dp35"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/ic_like" />


                    <TextView
                        android:id="@+id/txt_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Like"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:padding="@dimen/dp3"
                    android:gravity="center_vertical"
                    android:id="@+id/ll_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                     >
                    <ImageView

                        android:tint="@color/app_bar"
                        android:id="@+id/img_comment"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="@dimen/dp35"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/icon_chat" />

                    <TextView
                        android:id="@+id/txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/txt_comment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16sp"
                        />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp3"
                android:id="@+id/ll_suppliers"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/suppliers"
                    android:textSize="@dimen/text_14sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_suppliers_detail_product"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_14sp"/>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp3"
                android:id="@+id/ll_location"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/location"
                    android:textSize="@dimen/text_14sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_location_detail_product"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_14sp"/>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp3"
                android:id="@+id/ll_price"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/price"
                    android:textSize="@dimen/text_14sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_price_detail_product"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_14sp"/>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:padding="@dimen/dp3"
                android:background="@drawable/spr_item_language"
                android:gravity="center_vertical"
                android:id="@+id/ll_phone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/txt_hotline"
                    android:textSize="@dimen/text_14sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_phone_detail_product"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_14sp"/>
                <ImageView
                    android:tint="@color/app_bar"
                    android:padding="@dimen/dp3"
                    android:src="@drawable/icon_phone"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30" />
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp3"
                android:gravity="center_vertical"
                android:id="@+id/ll_time"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/schedule_time"
                    android:textSize="@dimen/text_14sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_schedule_time_product"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_14sp"/>

            </LinearLayout>

            <View
                android:background="@color/text_flight"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView

                android:textColor="@color/black"
                android:id="@+id/txt_description_detail_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>