<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/app_bar_main" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerVertical="true"
                android:id="@+id/img_avata_addfeedback"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                app:civ_border_width="@dimen/dp1"
                app:civ_border_color="@color/app_bar"
                android:src="@drawable/ic_avata_svg" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toRightOf="@id/img_avata_addfeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_name_detailfeddback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:padding="@dimen/dp2"
                    android:gravity="center_vertical"
                    android:textColor="@color/app_bar"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/txt_email_detailfeddback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:padding="@dimen/dp2"
                    android:gravity="center_vertical"
                    android:textColor="@color/app_bar"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:padding="@dimen/dp5"
            android:textColor="@color/text_flight"
            android:textSize="@dimen/text_15sp" />

        <TextView
            android:id="@+id/txt_title_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="@string/txt_title_answer"
            android:textColor="@color/red"
            android:textSize="@dimen/text_16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="right"
            app:civ_border_width="@dimen/dp1"
            app:civ_border_color="@color/app_bar"

            android:id="@+id/img_admin"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:src="@drawable/icon_admin" />

        <TextView
            android:id="@+id/txt_content_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:padding="@dimen/dp5"
            android:textColor="@color/text_flight"
            android:textSize="@dimen/text_16sp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>