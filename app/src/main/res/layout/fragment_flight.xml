<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:padding="@dimen/dp10">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:background="@drawable/spr_edittext_search"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:padding="@dimen/dp10"
                android:src="@drawable/ic_checkin"
                />

            <View
                android:background="@color/text_flight"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/text_flight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp20"
                android:text="@string/txt_flight_checkin"
                android:textSize="@dimen/text_17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/spr_edittext_search"
            android:orientation="horizontal">

            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:padding="@dimen/dp10"
                android:src="@drawable/img_booking"
                />

            <View
                android:background="@color/text_flight"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/text_flight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp20"
                android:text="@string/txt_flight_booking"
                android:textSize="@dimen/text_17sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/spr_edittext_search"
            android:orientation="horizontal">

            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:padding="@dimen/dp10"
                android:src="@drawable/ic_intrustion"
                />

            <View
                android:background="@color/text_flight"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/text_flight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp20"
                android:text="@string/txt_flight_instruction"
                android:textSize="@dimen/text_17sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/spr_edittext_search"
            android:orientation="horizontal">

            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:padding="@dimen/dp10"
                android:src="@drawable/ic_airline"

                />

            <View
                android:background="@color/text_flight"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/text_flight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp20"
                android:text="@string/txt_airlines"
                android:textSize="@dimen/text_17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>