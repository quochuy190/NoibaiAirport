<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <include
       android:id="@+id/app_bar_shop"
       layout="@layout/app_bar_main">

   </include>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/img_default"
                android:layout_margin="@dimen/dp1"
                android:id="@+id/img_shop_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp200" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="@dimen/dp3"
                    android:id="@+id/ll_like_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:tint="@color/app_bar"
                        android:id="@+id/img_like"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="@dimen/dp35"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/ic_like" />
                    <TextView
                        android:id="@+id/txt_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Like"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16sp"
                        />
                </LinearLayout>

                <LinearLayout

                    android:padding="@dimen/dp3"
                    android:gravity="center_vertical"
                    android:id="@+id/ll_comment"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                                     >
                    <ImageView

                        android:tint="@color/app_bar"
                        android:id="@+id/img_comment"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="@dimen/dp35"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/icon_chat" />

                    <TextView
                        android:id="@+id/txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/txt_comment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16sp"
                        />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp3"
                android:id="@+id/ll_teminal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/terminal"
                    android:textSize="@dimen/text_15sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_terminal_detail_service"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_15sp"/>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp3"
                android:id="@+id/ll_floor"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/floor"
                    android:textSize="@dimen/text_15sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_floor_detail_service"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_15sp"/>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp3"
                android:id="@+id/ll_area"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/area"
                    android:textSize="@dimen/text_15sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_area_detail_service"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_15sp"/>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp3"
                android:gravity="center_vertical"
                android:id="@+id/ll_price"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/price"
                    android:textSize="@dimen/text_15sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_price_detail_service"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_15sp"/>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp3"
                android:gravity="center_vertical"
                android:id="@+id/ll_phone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text="@string/phone"
                    android:textSize="@dimen/text_15sp"/>
                <TextView
                    android:textColor="@color/text_flight"
                    android:id="@+id/txt_phone_detail_service"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:text=""
                    android:textSize="@dimen/text_15sp"/>

            </LinearLayout>

            <View
                android:background="@color/text_flight"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView

                android:textColor="@color/black"
                android:id="@+id/txt_description_detail_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/text_15sp" />
            <TextView
                android:text="@string/txt_comment"
                android:background="@color/app_bar"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/text_15sp" />
            <android.support.v7.widget.RecyclerView
                android:layout_weight="1"
                android:id="@+id/reyclerview_comment_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp3">
            </android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/layout_chatbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:minHeight="@dimen/dp35"
                android:orientation="horizontal"
                android:padding="@dimen/dp5">

                <EditText
                    android:singleLine="false"
                    android:inputType="text|textMultiLine"
                    android:gravity="top|left"
                    android:lines="3"
                    android:maxLines="5"
                    android:minLines="1"
                    android:id="@+id/edt_input_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp3"
                    android:layout_marginRight="@dimen/dp3"
                    android:layout_weight="1"
                    android:background="@drawable/spr_input_message"
                    android:hint="Enter message"
                    android:padding="@dimen/dp10"
                    android:textSize="@dimen/text_16sp" />

                <ImageView
                    android:id="@+id/button_chatbox_send"
                    android:layout_width="@dimen/dp45"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:src="@drawable/ic_send"
                    android:tint="@color/app_bar" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>