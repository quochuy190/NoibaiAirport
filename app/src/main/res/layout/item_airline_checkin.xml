<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_contacts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp1"
    android:background="@drawable/spr_item_language"
    android:orientation="horizontal"
    android:padding="@dimen/dp5">


    <!--  ListRow L
    eft sied Thumbnail image -->
    <ImageView
        android:id="@+id/img_avata_airline"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
       />

    <!-- Title Of Song-->
    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_toRightOf="@id/img_avata_airline"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name_airline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/text_flight"
            android:textSize="@dimen/text_17sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txt_address_airline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"

            android:text=""
            android:textColor="@color/text_flight"
            android:textSize="@dimen/text_13sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txt_phone_airline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"

            android:text=""
            android:textColor="@color/text_flight"
            android:textSize="@dimen/text_13sp"
            android:typeface="sans" />
    </LinearLayout>

</RelativeLayout>