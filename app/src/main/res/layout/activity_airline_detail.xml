<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar_main" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_banner_airline_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="@dimen/dp5"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp5"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                android:padding="@dimen/dp5"
                android:text="@string/location"
                android:textSize="@dimen/text_15sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_location_airlinedetail"
                    android:textColor="@color/text_flight"
                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/text_15sp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/dp5"
                    android:text="@string/hotline_airline"
                    android:textSize="@dimen/text_15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_hotline_airlinedetail"
                    android:textColor="@color/text_flight"
                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/text_15sp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/text_flight"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:padding="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_checkin_airlinedetail"
                    android:textColor="@color/text_flight"
                    android:textAllCaps="false"
                    android:background="@drawable/spr_button_load_earlier"
                    android:layout_margin="@dimen/dp5"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="@string/check_in"
                    android:textSize="@dimen/text_17sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_boking_airlinedetail"
                    android:textAllCaps="false"
                    android:text="@string/booking"
                    android:background="@drawable/spr_button_load_earlier"
                    android:layout_margin="@dimen/dp5"
                    android:textColor="@color/text_flight"
                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/text_15sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_17sp"
                android:background="@color/gray"
                android:padding="@dimen/dp10"
                android:text="@string/list_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView

                android:id="@+id/rv_destination_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>