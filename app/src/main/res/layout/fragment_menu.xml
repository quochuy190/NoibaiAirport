<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >
    <ImageView
        android:background="@color/white"
        android:src="@drawable/icon_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50" />
    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/icon_may_bay"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <android.support.v4.widget.NestedScrollView
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp70"
                    android:padding="@dimen/dp15"
                    android:src="@drawable/img_checkin" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="@color/text_flight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp20"
                    android:text="@string/txt_loyalty_program"
                    android:textColor="@color/text_flight"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp70"
                    android:padding="@dimen/dp15"
                    android:src="@drawable/ic_map" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="@color/text_flight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp20"
                    android:text="@string/txt_map"
                    android:textColor="@color/text_flight"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_feedback"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp70"
                    android:padding="@dimen/dp15"
                    android:src="@drawable/ic_call" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="@color/text_flight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp20"
                    android:text="@string/txt_evaluate"
                    android:textColor="@color/text_flight"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp70"
                    android:padding="@dimen/dp15"
                    android:src="@drawable/img_checkin" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="@color/text_flight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp20"
                    android:text="@string/txt_about"
                    android:textColor="@color/text_flight"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_language"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp70"
                    android:padding="@dimen/dp15"
                    android:src="@drawable/img_checkin" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="@color/text_flight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp20"
                    android:text="@string/txt_language"
                    android:textColor="@color/text_flight"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />
            </LinearLayout>




        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>




</LinearLayout>